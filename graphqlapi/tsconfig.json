{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@backend/*": [
        "./src/backend/*"
      ],
      "@frontend/*": [
        "./src/frontend/*"
      ],
      "@app/*": [
        "./app/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@prisma/client": [
        "./node_modules/.prisma/client"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/backend/types",
      "./src/frontend/types",
      "./node_modules/@types"
    ],
    "types": [
      "jest",
      "node",
      "@types/jest",
      "@quramy/jest-prisma"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    "app/**/*",
    ".next/types/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
