{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": ["./app/*"],
      "@prisma/client": ["./node_modules/.prisma/client"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "types": ["jest", "node", "@types/jest", "@quramy/jest-prisma"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    ".next/types/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
